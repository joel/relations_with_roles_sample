source 'https://rubygems.org'

gem 'rails', '3.2.6'

gem 'jquery-rails'
gem 'sqlite3'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development, :test do
  gem 'rspec-rails'
end

# test stuff
group :test do
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'guard-bundler'
  gem 'rb-fsevent' # For Guard
  gem 'growl' # For Guard
  gem 'database_cleaner'
  gem 'capybara'
  gem 'factory_girl'
  gem 'factory_girl_rails'
end
